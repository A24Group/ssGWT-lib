<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" >

    <g:LayoutPanel ui:field="leftMenuItem">
        <g:layer top="0px" width="100%" right="0px" bottom="0px">
            <g:FlowPanel ui:field="notSelectedFlowPanel" width="100%" height="100%">
                <g:FocusPanel ui:field="notSelectedPanel">
                    <g:FlowPanel>
                        <g:FlowPanel ui:field="notSelectedNotificationContainer">
                            <g:Label ui:field="notSelectedNotificationCount"/>
                        </g:FlowPanel>
                        <g:Image ui:field="notSelectedImage"/>
                        <g:Label ui:field="notSelectedLabel"/>
                    </g:FlowPanel>
                </g:FocusPanel>
            </g:FlowPanel>
        </g:layer>
        <g:layer top="0px" width="0px" right="0px" bottom="0px">
            <g:LayoutPanel ui:field="selectedPanel">
                <g:layer ui:field="selectedImageLayer">
                    <g:Image ui:field="selectedImage"/>
                </g:layer>
                <g:layer ui:field="selectedLabelLayer">
                    <g:FlowPanel ui:field="selectedLabelContainer">
                        <g:Label ui:field="selectedLabel"/>
                        <g:FlowPanel ui:field="selectedNotificationContainer">
                            <g:Label ui:field="selectedNotificationCount"/>
                        </g:FlowPanel>
                    </g:FlowPanel>
                </g:layer>
            </g:LayoutPanel>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder>