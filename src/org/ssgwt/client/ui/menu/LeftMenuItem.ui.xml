<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" >

    <g:LayoutPanel ui:field="leftMenuItem">
        <g:layer top="0px" left="0px" right="0px" bottom="0px">
            <g:FocusPanel ui:field="notSelectedPanel">
                <g:FlowPanel>
                    <g:Image ui:field="notSelectedImage"/>
                    <g:Label ui:field="notSelectedLabel"/>
                </g:FlowPanel>
            </g:FocusPanel>
        </g:layer>
        <g:layer top="0px" width="0px" right="0px" bottom="0px">
            <g:LayoutPanel ui:field="selectedPanel">
                <g:layer ui:field="selectedImageLayer">
                    <g:Image ui:field="selectedImage"/>
                </g:layer>
                <g:layer ui:field="selectedLabelLayer">
                    <g:Label ui:field="selectedLabel"/>
                </g:layer>
            </g:LayoutPanel>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder>