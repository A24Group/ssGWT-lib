<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    
    <ui:with field='resources' type='org.ssgwt.client.ui.datagrid.filter.SelectBoxFilter.SelectBoxFilterResources'/>
    <g:FlowPanel styleName="{resources.selectBoxFilterStyle.listBoxFilterStyle}" >
        <g:SimplePanel styleName="{resources.selectBoxFilterStyle.arrowBorderStyle}" />
        <g:SimplePanel styleName="{resources.selectBoxFilterStyle.arrowStyle}" />
        <g:FlowPanel width="100%" >
            <g:Label ui:field="titleLabel" styleName="{resources.selectBoxFilterStyle.titleStyle}" />
            <g:Image ui:field="removeFilterIcon" resource="{resources.removeFilterIconUp}" styleName="{resources.selectBoxFilterStyle.removeFilterIconStyle}" />
        </g:FlowPanel>
        <g:FlowPanel styleName="{resources.selectBoxFilterStyle.checkBoxContainerStyle}" width="100%">
            <g:CheckBox ui:field="checkBox" styleName="{resources.selectBoxFilterStyle.checkBoxStyle}"/>
            <g:Label ui:field="checkBoxLabel" text="Find Empty Entries Only" styleName="{resources.selectBoxFilterStyle.checkBoxLabelStyle}"/>
        </g:FlowPanel>
        <g:Label ui:field="listBoxLabel" text="Text to filter:" styleName="{resources.selectBoxFilterStyle.listBoxLabelStyle}" width="100%"/>
        <g:FlowPanel styleName="{resources.selectBoxFilterStyle.listBoxStyleContainer}" width="100%">
            <g:ListBox ui:field="listBox" styleName="{resources.selectBoxFilterStyle.listBoxStyle}" width="100%"/>
        </g:FlowPanel>
        <g:FlowPanel styleName="{resources.selectBoxFilterStyle.applyButtonContainer}" width="100%">
            <g:Button ui:field="applyButton" text="Apply" styleName="{resources.selectBoxFilterStyle.applyButton}" />
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>