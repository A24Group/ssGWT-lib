<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <g:FlowPanel>
        
        <g:LayoutPanel width="100%" height="100%">
            
            <g:layer left="0px" right="0px" top="0px" bottom="40px" >
            
                <c:DataGrid ui:field="dataGrid"/>
            
            </g:layer>
            
            <g:layer visible="true" height="40px" left="0px" right="0px" bottom="0px" >
                <g:FlowPanel ui:field="actionBar" >
                    <g:FlowPanel ui:field="actionBarContainer">
                        <!-- Space for optional widget -->
                    </g:FlowPanel>
                    <c:SimplePager ui:field="pager" />
                </g:FlowPanel>
            </g:layer>
        </g:LayoutPanel>
    </g:FlowPanel>
</ui:UiBinder>