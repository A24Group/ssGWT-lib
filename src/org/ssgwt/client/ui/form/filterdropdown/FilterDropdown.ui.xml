<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" 
             xmlns:d="urn:import:org.ssgwt.client.ui.datagrid" 
             xmlns:c="urn:import:com.google.gwt.user.cellview.client" xmlns:s="urn:import:org.ssgwt.client.ui">

    <ui:with field='resources' type='org.ssgwt.client.ui.form.filterdropdown.FilterDropdown.FilterDropdownResources'/>
    <g:LayoutPanel ui:field="container" width="100%" height="28px">
        <g:layer left="0px" top="0px" bottom="0px" right="0px">
            <g:TextBox width="100%" height="28px" ui:field="textBox" styleName="{resources.filterDropdownStyle.textBox} gwt-TextBox"></g:TextBox>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder>